{
  "compilerOptions": {
    "target": "es2017",
    "declaration": true,
    "module": "commonjs",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "esModuleInterop": true
  },
  "exclude": [
    "sample",
    "tasks",
    "node_modules"
  ]
}